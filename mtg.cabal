  other-extensions:    FlexibleInstances,
                       NoMonomorphismRestriction,
                       OverloadedStrings,
                       TypeSynonymInstances
  build-depends:       base >=4.6 && <4.7,
                       aeson >=0.7 && <1.0,
                       bytestring >=0.10 && <0.11,
                       parsec >=3.0 && <4.0,
                       regex-compat >=0.90 && <1.0,
                       split >=0.2 && <0.3,
                       text >=1.0 && <2.0,
                       transformers >=0.3 && <0.4
